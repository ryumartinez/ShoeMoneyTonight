{
  "resources": {
    "order-queue": {
      "type": "container.v0",
      "connectionString": "amqp://guest:{order-queue-password.value}@{order-queue.bindings.tcp.host}:{order-queue.bindings.tcp.port}",
      "image": "docker.io/library/rabbitmq:3.13",
      "env": {
        "RABBITMQ_DEFAULT_USER": "guest",
        "RABBITMQ_DEFAULT_PASS": "{order-queue-password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 5672
        }
      }
    },
    "sqlserver": {
      "type": "container.v0",
      "connectionString": "Server={sqlserver.bindings.tcp.host},{sqlserver.bindings.tcp.port};User ID=sa;Password={sqlserver-password.value};TrustServerCertificate=true",
      "image": "mcr.microsoft.com/mssql/server:2022-latest",
      "env": {
        "ACCEPT_EULA": "Y",
        "MSSQL_SA_PASSWORD": "{sqlserver-password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 1433
        }
      }
    },
    "thedb": {
      "type": "value.v0",
      "connectionString": "{sqlserver.connectionString};Database=thedb"
    },
    "api": {
      "type": "project.v0",
      "path": "../ShoeMoney.API/ShoeMoney.API.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "ConnectionStrings__thedb": "{thedb.connectionString}",
        "ConnectionStrings__order-queue": "{order-queue.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        }
      }
    },
    "order-processing": {
      "type": "project.v0",
      "path": "../ShoeMoney.OrderProcessing/ShoeMoney.OrderProcessing.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ConnectionStrings__thedb": "{thedb.connectionString}",
        "ConnectionStrings__order-queue": "{order-queue.connectionString}"
      }
    },
    "store": {
      "type": "dockerfile.v0",
      "path": "../shoemoney.store/Dockerfile",
      "context": "../shoemoney.store/",
      "env": {
        "NODE_ENV": "development",
        "services__api__http__0": "{api.bindings.http.url}",
        "services__api__https__0": "{api.bindings.https.url}"
      }
    },
    "order-queue-password": {
      "type": "parameter.v0",
      "value": "{order-queue-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22,
              "special": false
            }
          }
        }
      }
    },
    "sqlserver-password": {
      "type": "parameter.v0",
      "value": "{sqlserver-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22,
              "minLower": 1,
              "minUpper": 1,
              "minNumeric": 1
            }
          }
        }
      }
    }
  }
}